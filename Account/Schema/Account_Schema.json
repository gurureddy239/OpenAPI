{
  "$id": "http://netapp.com/json/schemas/account",
  "type": "object",
  "properties": {
    "Account": {
      "type": "array",
      "items": {
        "properties": {
          "Name": {
            "type": "string"
          },
          "Category": {
            "type": "string",
            "enum": [
              "Strategic",
              "Enterprise",
              "Commercial"
            ]
          },
          "Website": {
            "type": "string"
          },
          "Opportunity": {
            "type": "array",
            "items": {
              "properties": {
                "OptyId": {
                  "type": "number"
                },
                "Name": {
                  "type": "string"
                },
                "Description": {
                  "type": "string"
                },
                "Type": {
                  "type": "string",
                  "enum": [
                    "New",
                    "Expansion",
                    "Upsell",
                    "Renewal"
                  ]
                },
                "OpportunitySource": {
                  "type": "string",
                  "enum": [
                    "Partner",
                    "Referal",
                    "Cor Rep",
                    "Renewal"
                  ]
                },
                "Status": {
                  "type": "string",
                  "enum": [
                    "New",
                    "InProgress",
                    "Closed"
                  ]
                },
                "OpportunityProduct": {
                  "type": "array",
                  "items": {
                    "properties": {
                      "Product": {
                        "type": "string"
                      },
                      "ProductCode": {
                        "type": "string"
                      },
                      "Quantity": {
                        "type": "number"
                      },
                      "UnitPrice": {
                        "type": "number"
                      }
                     },
                    "type": "object",
                    "required": [
                      "Product"
                    ]
                  }
                }
              },
              "type": "object",
              "required": [
                "OptyId"
              ]
            }
          }
        },
        "type": "object",
        "required": [
          "Name"
        ]
      }
    }
  }
}