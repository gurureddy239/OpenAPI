{
  "$id": "http://netapp.com/json/schemas/oppurtunity",
  "type": "object",
  "properties": {
    "Opportunity": {
      "type": "array",
      "items": {
        "properties": {
          "OptyId": {
            "type": "string"
          },
          "Name": {
            "type": "string"
          },
          "Description": {
            "type": "string"
          },
          "Status": {
            "type": "string",
            "enum": ["New", "InProgress","Closed"]
          },
          "OptyLineItems": {
            "type": "array",
            "items": {
              "properties": {
                "Item#": {
                  "type": "string"
                },
                "ProductId": {
                  "type": "string"
                },
                "Quantity": {
                  "type": "number"
                },
                "UnitPrice": {
                  "type": "number"
                },
                "SubItems": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "SubItem#": {
                        "type": "number"
                      },
                      "SubItemProductId": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "SubItem#"
                    ]
                  }
                }
              },
              "type": "object",
              "required": [
                "Item#"
              ]
            }
          }
        },
        "type": "object",
        "required": [
          "OptyId"
        ]
      }
    }
  }
}